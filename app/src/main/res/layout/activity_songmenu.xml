<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="120dp"
    android:layout_height="match_parent"

    android:background="#3A3A3A">

    <LinearLayout
        android:id="@+id/song_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/songmenu_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/extrasong_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="parent">

            <TextView
                android:id="@+id/songmenu_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Artist"
                android:textColor="@color/white"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/songmenu_genre"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Genre"
                android:textColor="@color/white"
                android:textSize="20sp" />


        </LinearLayout>

        <ImageView
            android:id="@+id/song_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/bg_songitem"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/play_button"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/pausebutton"
                android:layout_marginTop="16dp"
                />

        </LinearLayout>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
